@model Dateitransfer.vNext.Api.Dto.Job

<tr id="row-@Model.Id">
    <td>
        @Html.DisplayFor(modelItem => Model.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.Cron)
    </td>
    <td id="item-enabled-@Model.Id">
        @Html.DisplayFor(modelItem => Model.IsEnabled)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.LastRun)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.InputId)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Details", "Details", new { id = Model.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
        @{
            string text = "Aktivieren";
            if (Model.IsEnabled)
            {
                text = "Deaktivieren";
            }
        }
        @Ajax.ActionLink(text, "EnableJob", "", new { jobId = Model.Id, enable = !Model.IsEnabled }, new AjaxOptions() { UpdateTargetId="row-" + Model.Id, InsertionMode=InsertionMode.ReplaceWith, HttpMethod="POST" })
    </td>
</tr>